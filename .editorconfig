root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.ts]
indent_style = space
indent_size = 2
max_line_length = 2000
quote_type = single

[*.{js,html}]
indent_style = space
indent_size = 2
max_line_length = 1000
quote_type = single